<%- include("../partials/header") %>

<h1><%= locals.title %> Supplier Edit Form</h1>

<div>
  <form method="POST" action="/suppliers/edit/<%- supplier.id %>">
    <div class="form-field">
      <label for="supplierName">Supplier Name: </label>
      <input type="text" name="supplierName" id="supplierName" value="<%- supplier.name %>" autofocus>
    </div>
    <input type="submit" value="Edit Supplier" class="btn btn-green">
  </form>
</div>

<%- include("../partials/footer") %>