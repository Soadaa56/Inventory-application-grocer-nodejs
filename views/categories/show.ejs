<%- include("../partials/header") %>

<h1><%= locals.title %> Products</h1>

<div class="products-item-wrapper">
  <% productsByCategory.forEach(product => { %>
    <div class="card p-1 mb-1 shadow-sm product-item">
      <%- product.name %>,
      <%- product.size %>,
      $<%- product.price %>,
      <%- product.sku %>,
      <%- product.category_name %>,
      <a href="/products/show/<%- product.id %>">GO TO</a>
    </div>
  <% }); %>
</div>

