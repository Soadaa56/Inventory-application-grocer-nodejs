<%- include("../partials/header") %>

<h1><%= locals.title %></h1>

<div>
  <p>TOTAL INVENTORY VALUE: $<%- totalInventoryValueRounded %></p>
</div>

<% inventoryStock.forEach(stock => { %>
  <div>
    ID: <span style="color: blue;"><%- stock.product_id %></span>,
    NAME: <span style="color: blue;"><%- stock.name %></span>,
    SIZE: <span style="color: blue;"><%- stock.size %></span>,
    STOCK QUANTITY: <span style="color: blue;"><%- stock.total_quantity %></span>,
    TOTAL STOCK VALUE: <span style="color: blue;"><%- stock.total_product_value %></span>
  </div>
<% }); %>

<canvas id="stockValueByCategoryPie" style="width: 300px; height: 300px;"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/javascript/chart.js" type="module"></script>

<%- include("../partials/footer") %>